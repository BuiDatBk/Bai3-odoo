                            <field name="month3" style="color:green ! important;"/>
                            <field name="month4" style="color:pink ! important;"/>
                            <field name="month5" style="color:black ! important;"/>
                            <field name="month6" style="color:red ! important;"/>
                            <field name="month7" style="color:blue ! important;"/>
                            <field name="month8" style="color:green ! important;"/>
                            <field name="month9" style="color:orange ! important;"/>
                            <field name="month10" style="color:black ! important;"/>
                            <field name="month11" style="color:red ! important;"/>
                            <field name="month12" style="color:blue ! important;"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>