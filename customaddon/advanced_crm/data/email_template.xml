<?xml version="1.0" encoding="utf-8"?>


<odoo>
    <data noupdate="0">
        <record id="mail_template_mobile_merge_request" model="mail.template">
            <field name="name">
                Báo cáo về phòng kinh doanh và mua hàng
            </field>
            <field name="model_id" ref="advanced_crm.model_monthly_report"/>
            <field name="subject">Báo cáo hàng tháng về kinh doanh và mua hàng</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        <h1 style="color: #000;">I. Kinh doanh</h1>
                        <table class="table-without-space">
                            <tr>
                                <!--                                <td style="border: 1px solid black; border-collapse: collapse; padding: 10px;">Stt</td>-->
                                <td style="color: #000; font-weight: bold; border-collapse: collapse; padding: 10px;">
                                    Stt
                                </td>
                                <td style="color: #000; font-weight: bold; border-collapse: collapse; padding: 10px;">
                                    Tên nhóm bán hàng
                                </td>
                                <td style="color: #000; font-weight: bold; border-collapse: collapse; padding: 10px;">
                                    Doanh thu thực tế
                                </td>
                                <td style="color: #000; font-weight: bold; border-collapse: collapse; padding: 10px;">
                                    Chênh lệch doanh thu thực tế so với chỉ tiêu tháng hiện tại
                                </td>
                            </tr>

                            <!-- CONTENT -->
                            <t t-foreach="object.crm_month_report" t-as="crm_list">
                                <tr>
                                    <td align="center" t-esc="crm_list_index + 1"/>
                                    <td align="center" t-out="crm_list.sales_team_id.name"/>
                                    <td align="center" t-out="crm_list.actual_revenue"/>
                                    <td align="center" t-out="crm_list.diff_actual_target"/>
                                </tr>
                            </t>
                        </table>
                        <br/>
                        <br/>
                        <h1 style="color: #000;">II. Mua hàng</h1>
                        <table class="table-without-space">
                            <tr>
                                <td style="color: #000; font-weight: bold; border-collapse: collapse; padding: 10px;">
                                    Stt
                                </td>
                                <td align="center" style="color: #000; font-weight: bold; border-collapse: collapse; padding: 10px;">
                                    Tên phòng ban
                                </td>
                                <td style="color: #000; font-weight: bold; border-collapse: collapse; padding: 10px;">
                                    Chi tiêu thực tế
                                </td>
                                <td style="color: #000; font-weight: bold; border-collapse: collapse; padding: 10px;">
                                    Chênh lệch chi tiêu thực tế so với hạn mức
                                </td>
                            </tr>
                            <t t-foreach="object.purchase_month_report" t-as="purchase_list">
                                <tr>
                                    <td align="center" t-esc="purchase_list_index + 1"/>
                                    <td align="center" t-out="purchase_list.department_id.name"/>
                                    <td align="center" t-out="purchase_list.actual_spending"/>
                                    <td align="center" t-out="purchase_list.diff_actual_limit"/>
                                </tr>
                            </t>
                        </table>
                    </p>
                </div>
            </field>
            <field name="lang" eval="False"/>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
