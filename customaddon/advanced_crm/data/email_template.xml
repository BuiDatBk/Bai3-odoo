                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        <h1 style="color: #000;">I. Kinh doanh</h1>
                        <br/>
                        <table class="table-without-space">
                            <tr>
                                <!--                                <td style="border: 1px solid black; border-collapse: collapse; padding: 10px;">Stt</td>-->
                                <td style="color: #000; font-weight: bold; border-collapse: collapse; padding: 10px;">
                                    Stt
                                </td>
                                <td style="color: #000; font-weight: bold; border-collapse: collapse; padding: 10px;">
                                    Tên nhóm bán hàng
                                </td>
                                <td style="color: #000; font-weight: bold; border-collapse: collapse; padding: 10px;">
                                    Doanh thu thực tế
                                </td>
                                <td style="color: #000; font-weight: bold; border-collapse: collapse; padding: 10px;">
                                    Chênh lệch doanh thu thực tế so với chỉ tiêu tháng hiện tại
                                </td>
                            </tr>

                            <!--                            {% for item in sales %}-->
                            <!--                            <tr>-->
                            <!--                                <td class="td-boder">{{ loop.index }}</td>-->
                            <!--                                <td class="td-boder">{{ item.sale_team_name }}</td>-->
                            <!--                                <td class="td-boder">{{ item.real_revenue }}</td>-->
                            <!--                                <td class="td-boder">{{ item['diff'] }}</td>-->
                            <!--                            </tr>-->
                            <!--                            {% endfor %}-->
                        </table>

                        <h1 style="color: #000;">II. Mua hàng</h1>
                        <br/>
                        <table class="table-without-space">
                            <tr>
                                <td style="color: #000; font-weight: bold; border-collapse: collapse; padding: 10px;">
                                    Stt
                                </td>
                                <td style="color: #000; font-weight: bold; border-collapse: collapse; padding: 10px;">
                                    Tên phòng ban
                                </td>
                                <td style="color: #000; font-weight: bold; border-collapse: collapse; padding: 10px;">
                                    Chi tiêu thực tế
                                </td>
                                <td style="color: #000; font-weight: bold; border-collapse: collapse; padding: 10px;">
                                    Chênh lệch chi tiêu thực tế so với hạn mức
                                </td>
                            </tr>

                            <!--                            {% for item in purchase %}-->
                            <!--                            <tr>-->
                            <!--                                <td class="td-boder">{{ loop.index }}</td>-->
                            <!--                                <td class="td-boder">{{ item.department_name }}</td>-->
                            <!--                                <td class="td-boder">{{ item.real_cost }}</td>-->
                            <!--                                <td class="td-boder">{{ item['diff'] }}</td>-->
                            <!--                            </tr>-->
                            <!--                            {% endfor %}-->
                        </table>

                    </p>
                </div>
            </field>
            <field name="lang" eval="False"/>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>


